{
  "extends": ["airbnb-base", "plugin:prettier/recommended", "plugin:mocha/recommended"],
  "plugins": ["chai-expect"],
  "rules": {
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "func-names": ["error", "never"],
    "class-methods-use-this": [
      "error",
      {
        "exceptMethods": ["visitFieldDefinition"]
      }
    ]
  },
  "env": {
    "mocha": true,
    "node": true,
    "es6": true
  }
}
